{
    "manifest_version": 3,
    "name": "Local Crypto Bridge",
    "version": "0.1",
    "description": "Bridge between site and local crypto app",

    "permissions": ["nativeMessaging"],

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }]
}